@model EEVA.Web.Models.StudentExamViewModel


@{
    ViewData["Title"] = "Create";
}


<h1>Exam</h1>
<br />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Exam.Course.CourseName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Exam.Course.CourseName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Exam.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Exam.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.FullName)
        </dd>
    </dl>
</div>
<br />

<h4>Question @Model.Counter  of @Model.Exam.ExamQuestions.Count</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddAnswer">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Question" +":" class="control-label"></label>
                <output> @Html.DisplayFor(model => model.Question) </output>
            </div>
            <br />
            <div>
                <label asp-for="StudentExamAnswer" class="control-label"></label>
                <input asp-for="StudentExamAnswer" class="form-control" />
            </div>
            <br />
            <div class="form-group">
                <table>
                    <tr>
                        <td>
                            <input type="submit" value="<< Previous" class="btn btn-primary" />
                        </td>
                        <td>
                            <input type="submit" value="Next >>" class="btn btn-primary" />
                        </td>
                        <td>
                            <input type="submit" value="Submit Exam" class="btn btn-outline-success my-2 my-sm-0" />
                        </td>
                    </tr>
                </table>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


