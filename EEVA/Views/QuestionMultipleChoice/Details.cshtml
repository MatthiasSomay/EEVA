@model EEVA.Web.Models.QuestionMultipleChoiceViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Question</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.QuestionPhrase)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.QuestionPhrase)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
<div>
    <br />
    <br />
    <h5>Answers</h5>
    <a asp-action="AddAnswer" asp-route-id="@Model.Id">Add an Answer</a>
    <br />
    <br />
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Answers.FirstOrDefault().Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Answers.FirstOrDefault().Answer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Answers.FirstOrDefault().IsAnswerCorrect)
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>

        @if (Model.Answers.Count() > 0)
            @foreach (var item in Model.Answers)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Answer)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsAnswerCorrect)
                    </td>
                    <td>
                        <a asp-action="AnswerEdit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="AnswerDetails" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="AnswerDelete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
    </tbody>
</table>
