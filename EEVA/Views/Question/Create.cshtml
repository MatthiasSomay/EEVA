@model EEVA.Web.Models.QuestionViewModel

@{
    ViewData["Title"] = "Create";
}
    

<h1>Create a Question</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="QuestionPhrase" class="control-label"></label>
                <input asp-for="QuestionPhrase" class="form-control" />
                <span asp-validation-for="QuestionPhrase" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Course" class="control-label"></label>
                <br />
                @Html.DropDownListFor(m => m.CourseId,
                new SelectList(Model.Courses, "Id", "CourseName", Model.CourseId),
                "-- Select --", new { @class = "form-control" })
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />

                </div>
</form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
