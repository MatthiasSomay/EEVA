@model EEVA.Web.Models.ExamViewModel

@{
    ViewData["Title"] = "AddStudent";
    Layout = "~/Views/Shared/_Layout.cshtml";

}


<h1>Add Student to Exam</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddStudent">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="ExamQuestions" class="control-label"></label>
                <br />
                @Html.DropDownListFor(e => e.ExamQuestions,
                new SelectList(Model.Courses, "Id", "CourseName", Model.CourseId),
                "-- Select --", new { @class = "form-control" })
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />

            </div>
        </form>
    </div>
</div>

