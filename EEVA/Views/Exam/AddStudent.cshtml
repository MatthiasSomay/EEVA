@model EEVA.Web.Models.ExamViewModel

@{
    ViewData["Title"] = "AddStudent";
}
<h1>Add a Student</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddStudent">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="CourseName" class="control-label"></label>
                <input asp-for="CourseName" class="form-control" readonly="readonly" />
            </div>
            <div class="form-group">
                <label asp-for="StudentsAll" class="control-label"></label>
                <br />
                @Html.DropDownListFor(m => m.StudentId,
                new SelectList(Model.StudentsAll, "Id", "FullName", Model.StudentId),
                "-- Select --", new { @class = "form-control" })
            </div>
            <div class="form-group">
                <input type="submit" value="Add Student" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details" asp-route-id="Id">Back to Exam</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
